    <!--<property name="username" value="${env:MYSQL_SERVICE_USERNAME}"/>-->
    <!--<property name="password" value="${env:MYSQL_SERVICE_PASSWORD}"/>-->
    <property name="url" value="jdbc:mysql://${k8s:map:mysqlparam-config/MYSQL_SERVICE_NAME}/${k8s:map:mysqlparam-config/MYSQL_SERVICE_DATABASE}"/>
    <!--<property name="url" value="jdbc:mysql://mysql.yang.svc:3306/${k8s:map:mysql-param/MYSQL_SERVICE_DATABASE}"/>-->
    <property name="username" value="${k8s:map:mysqlparam-config/MYSQL_SERVICE_USERNAME}"/>
    <property name="password" value="${k8s:map:mysqlparam-config/MYSQL_SERVICE_PASSWORD}"/>
    <!--<property name="username" value="kalix"/>-->
    <!--<property name="password" value="kalix"/>-->
  </bean>

  <!-- bean which creates/destroys the database table for this example -->
  <bean id="initDatabase" class="org.apache.camel.example.sql.DatabaseBean"
        init-method="create" destroy-method="destroy">
    <property name="url" value="jdbc:mysql://${k8s:map:mysqlparam-config/serverName}/${k8s:map:mysqlparam-config/database}"/>
    <!--<property name="dataSource" ref="dataSource"/>-->
  </bean>
